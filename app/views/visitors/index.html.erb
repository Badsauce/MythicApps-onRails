<script>
  $( document ).ready(function(e) {
    $('#application').hide();
  });

  var compassDraw = new Vivus('compass-container', {
    type: 'async',
    duration:100,
    file: '<%= asset_path 'compass.svg'%>',
    start: 'manual',
  });

  $('#compass-container').waypoint(function(direction) {
    if(direction === "down"){
      compassDraw.play();
    };
  }, {
    offset: '100%'
  });
</script>

